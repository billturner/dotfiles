snippet desc
	describe ${1:statement} do
		${2}
	end
snippet it
	it "${1:context}" do
		${2}
	end
snippet bef
	before :each do
		${1}
	end
snippet aft
	after do
		${1}
	end
snippet sk
	skip "${1:reason}"
snippet let
	let (:${1}) { ${2} }
snippet sub
	subject { ${1} }
snippet exp
	expect(${1}).to ${2}
snippet exp!
	expect(${1}).to_not ${2}
snippet exp{
	expect{
		${1}
	}.to ${2}
snippet exp{!
	expect{
		${1}
	}.to_not ${2}
